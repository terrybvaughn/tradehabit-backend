{
  "name": "filter_losses",
  "description": "Paginate or fetch extremes from losses.losses (outsized-loss records). Returns loss statistics for Loss Consistency Chart analysis.",
  "strict": false,
  "parameters": {
    "type": "object",
    "properties": {
      "hasMistake": {
        "type": "boolean",
        "description": "Filter for records flagged with a mistake"
      },
      "time_of_day": {
        "type": "string",
        "enum": [
          "morning",
          "afternoon",
          "evening"
        ]
      },
      "time_range": {
        "type": "object",
        "properties": {
          "start": {
            "type": "string"
          },
          "end": {
            "type": "string"
          }
        },
        "description": "Clock-time HH:MM range"
      },
      "datetime_range": {
        "type": "object",
        "properties": {
          "start": {
            "type": "string"
          },
          "end": {
            "type": "string"
          }
        },
        "description": "ISO datetime range"
      },
      "side": {
        "type": "string"
      },
      "symbol": {
        "type": "string"
      },
      "pointsLost_min": {
        "type": "number"
      },
      "pointsLost_max": {
        "type": "number"
      },
      "sort_by": {
        "type": "string",
        "enum": [
          "pointsLost",
          "entryTime"
        ],
        "description": "Sort field"
      },
      "sort_dir": {
        "type": "string",
        "enum": [
          "asc",
          "desc"
        ],
        "description": "Sort direction"
      },
      "extrema": {
        "type": "object",
        "properties": {
          "field": {
            "type": "string",
            "enum": [
              "pointsLost"
            ]
          },
          "mode": {
            "type": "string",
            "enum": [
              "max",
              "min"
            ]
          }
        },
        "description": "Return only the single max/min record by field (ignores sort/paging)."
      },
      "include_total": {
        "type": "boolean",
        "default": true
      },
      "offset": {
        "type": "integer",
        "default": 0
      },
      "max_results": {
        "type": "integer",
        "default": 10
      },
      "fields": {
        "type": "array",
        "items": {
          "type": "string"
        }
      }
    },
    "required": [],
    "additionalProperties": false
  },
  "returns": {
    "type": "object",
    "properties": {
      "total": {
        "type": "integer",
        "description": "Total number of records matching filters"
      },
      "offset": {
        "type": "integer",
        "description": "Starting offset of returned results"
      },
      "returned": {
        "type": "integer",
        "description": "Number of records in this page"
      },
      "results": {
        "type": "array",
        "description": "Array of loss records"
      },
      "loss_statistics": {
        "type": "object",
        "description": "Computed loss statistics for Loss Consistency Chart analysis",
        "properties": {
          "mean_loss": {
            "type": "number",
            "description": "Mean loss amount across all losing trades"
          },
          "std_loss": {
            "type": "number", 
            "description": "Standard deviation of loss amounts"
          },
          "outsized_loss_multiplier": {
            "type": "number",
            "description": "Multiplier used for outsized loss threshold (default: 1.0)"
          },
          "outsized_loss_threshold": {
            "type": "number",
            "description": "Threshold for outsized loss detection (mean + multiplier * std)"
          },
          "total_losses": {
            "type": "integer",
            "description": "Total number of losing trades analyzed"
          },
          "outsized_losses_count": {
            "type": "integer",
            "description": "Number of losses exceeding the outsized loss threshold"
          },
          "unit": {
            "type": "string",
            "description": "Unit of measurement (points)"
          }
        }
      }
    }
  }
}